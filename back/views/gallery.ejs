<!DOCTYPE html>
<html>
<head>
  <title>Image Gallery</title>
  <style>
		body, html {
			display: flex;
			flex-direction: column;
			margin: 0;
			padding: 0;
			height: 100%;
			justify-content: center;
			align-items: center;
		}
		.image-container {
      display: flex;
			flex-wrap: wrap;
			justify-content: center;
			gap: 4vh;
      width: 80%;
      max-height: 80vh;
      overflow-y: auto;
    }
		.image-container img {
			width: calc(25% - 10px);
			height: auto;
			margin-bottom: 10px;
		}
  </style>
</head>
<body>
  <h1>Image Gallery</h1>
  <div class="image-container">
    <% images.forEach(image => { %>
      	<img src="/uploads/<%= image %>" alt="<%= image %>">
		<% }); %>
  </div>
</body>
</html>
